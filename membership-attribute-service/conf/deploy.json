{
  "defaultStacks": ["membership"],
  "packages":{
    "ami-update": {
      "type": "ami-cloudformation-parameter",
      "apps": [
        "membership-attribute-service"
      ],
      "data": {
        "amiTags": {
          "Recipe": "xenial-membership",
          "AmigoStage": "PROD"
        },
        "amiParameter": "AmiId",
        "cloudFormationStackByTags": true
      }
    },
    "membership-attribute-service":{
      "type":"autoscaling",
      "data":{
        "bucket": "gu-membership-attribute-service-dist"
      }
    }
  },
  "recipes":{
    "default":{
      "actionsBeforeApp": ["ami-update.update", "membership-attribute-service.uploadArtifacts", "membership-attribute-service.deploy"]
    },
    "artifactUploadOnly": {
      "actions": [ "membership-attribute-service.uploadArtifacts" ]
    }
  }
}